<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="385dp"
        android:layout_height="138dp"
        android:contentDescription="Channel Message Logo"
        android:src="@drawable/channel_messaging_logo"
        android:id="@+id/logoBlack"
        tools:ignore="HardcodedText"
        android:tint="@color/black"
        android:transitionName="logo"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_vertical_margin"/>

    <android.support.v7.widget.AppCompatButton
        android:text="Mes Amis"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:id="@+id/mes_amis"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold"
        tools:layout_gravity="center_horizontal" />

    <ListView
        android:id="@+id/listViewChannels"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>