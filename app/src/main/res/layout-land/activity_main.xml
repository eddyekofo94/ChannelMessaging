<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    android:layout_height="match_parent">

    <fragment

        android:layout_width="0dp"
        android:layout_weight="1.06"
        android:layout_height="match_parent"
        android:name="com.eddy.ifukie.channelmessaging.Fragment.ChannelListFragment"
        android:id="@+id/channelFragment"
        tools:layout="@layout/channels_fragment" />

    <fragment
    android:layout_width="0dp"
    android:layout_weight="2.48"
    android:layout_height="match_parent"
    android:name="com.eddy.ifukie.channelmessaging.Fragment.MessageFragment"
    android:id="@+id/messageFragment"
    tools:layout="@layout/message_fragment" />

</LinearLayout>